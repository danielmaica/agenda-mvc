@model Contato

@{
    ViewData["Title"] = "Editar contato";
}

<div>
    <h1>Editar contato</h1>

    <hr>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Editar">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label></label>
                    <input asp-for="Nome" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Telefone" class="control-label"></label></label>
                    <input asp-for="Telefone" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Ativo" class="control-label"></label></label>
                    <input type="checkbox" asp-for="Ativo" class="form-check-input" />
                </div>
                <br>
                <div class="form-group d-flex justify-content-between aling-items-center">
                    <button type="submit" value="Editar" class="btn btn-success">Editar</button>
                    <a asp-action="Index" class="">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>
